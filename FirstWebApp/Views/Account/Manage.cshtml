@using System.Web.UI.WebControls
@using FirstWebApp.Models.ViewModel
@model LocalPasswordModel
@{
    ViewBag.Title = "Управление акаунтом";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.StatusMessage</p>

